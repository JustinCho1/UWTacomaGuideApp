<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScreenBackground"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/mapBtn"
                android:layout_width="200dp"
                android:layout_height="84dp"
                android:layout_marginTop="140dp"
                style="@style/CardBackground"
                android:drawableTop="@drawable/map_icon"
                android:fontFamily="@font/uwbold"
                android:padding="10dp"
                android:text="Campus Map"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buildingBtn"
                style="@style/CardBackground"
                android:layout_width="200dp"
                android:layout_height="84dp"
                android:layout_marginTop="20dp"
                android:drawableTop="@android:drawable/ic_dialog_dialer"
                android:fontFamily="@font/uwbold"
                android:padding="10dp"
                android:text="Buildings"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/emailBtn"
                android:layout_width="200dp"
                android:layout_height="84dp"
                android:layout_marginTop="20dp"
                style="@style/CardBackground"
                android:drawableTop="@drawable/advising_icon"
                android:fontFamily="@font/uwbold"
                android:padding="10dp"
                android:text="Academic Advising"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/calenderBtn"
                android:layout_width="200dp"
                android:layout_height="84dp"
                android:layout_marginTop="20dp"
                style="@style/CardBackground"
                android:drawableTop="@drawable/calendar_icon"
                android:fontFamily="@font/uwbold"
                android:padding="10dp"
                android:text="Academic Calendar"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/eatBtn"
                android:layout_width="200dp"
                android:layout_height="84dp"
                android:layout_marginTop="20dp"
                style="@style/CardBackground"
                android:drawableTop="@drawable/food_icon"
                android:fontFamily="@font/uwbold"
                android:padding="10dp"
                android:text="Places To Eat"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/reserveBtn"
                android:layout_width="200dp"
                android:layout_height="84dp"
                android:layout_marginTop="20dp"
                style="@style/CardBackground"
                android:drawableTop="@drawable/study_icon"
                android:fontFamily="@font/uwbold"
                android:padding="10dp"
                android:text="Reserving Study Rooms"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/contactsBtn"
                android:layout_width="200dp"
                android:layout_height="84dp"
                android:layout_marginTop="20dp"
                style="@style/CardBackground"
                android:drawableTop="@drawable/contacts_icon"
                android:fontFamily="@font/uwbold"
                android:padding="10dp"
                android:text="Contacts"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/feedbackBtn"
                android:layout_width="200dp"
                android:layout_height="84dp"
                android:layout_marginTop="20dp"
                style="@style/CardBackground"
                android:drawableTop="@drawable/feedback"
                android:fontFamily="@font/uwbold"
                android:padding="10dp"
                android:text="Feedback"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/reportBtn"
                android:layout_width="200dp"
                android:layout_height="84dp"
                android:layout_marginTop="20dp"
                style="@style/CardBackground"
                android:drawableTop="@drawable/bugs_icon"
                android:fontFamily="@font/uwbold"
                android:padding="10dp"
                android:text="Report Bugs and Issues"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/aboutBtn"
                android:layout_width="200dp"
                android:layout_height="84dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                style="@style/CardBackground"
                android:fontFamily="@font/uwbold"
                android:text="About Us"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="username"/>

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="password"/>

            <Button
                android:id="@+id/signInButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:thumb="@drawable/thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:track="@drawable/track" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="106dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/w"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/uwbold"
        android:text="TACOMA GUIDE"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

</androidx.constraintlayout.widget.ConstraintLayout>

