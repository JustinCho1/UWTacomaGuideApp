            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="130dp">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#4b2e83"
                android:fontFamily="@font/uwbold"
                android:padding="10dp"
                android:text="Academic Advising Appointments"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView44"
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/uwnormal"
                android:text="Newly admitted and current UW Tacoma students can schedule an appointment online with their assigned pre-major academic advisor. "
                tools:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/textView66"
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/uwnormal"
                android:text="➤ Appointments must be scheduled at least one day (24 hours) in advance. "
                tools:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/textView10"
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/uwnormal"
                android:text="➤ During peak periods (e.g. registration), we highly encourage scheduling two weeks in advance. "
                tools:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textView47"
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/uwbold"
                android:text="How to Connect with Academic Advisor"
