                android:text="Wendy Barajas Cadenas	"
                android:textAlignment="center"
                android:textColor="#4B2E83"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonEmailB"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:background="#85754D"
                    android:fontFamily="@font/uwbold"
                    android:padding="10dp"
                    android:text="	barwen11@uw.edu"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40dp"
                    android:background="#85754D"
                    android:fontFamily="@font/uwbold"
                    android:padding="10dp"
                    android:text="Schedule"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:background="#7E7E7E"
                android:fontFamily="@font/uwbold"
                android:text="Students With Last Names Beginning:\nL - Q"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/uwbold"
                android:text="Will Taylor"
                android:textAlignment="center"
                android:textColor="#4B2E83"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonEmailC"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
